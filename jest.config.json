{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
        "**/__tests__/**/*.+(ts|tsx|js)",
        "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/dist/"
    ],
    "collectCoverageFrom": [
        "src/**/*.{ts,tsx,js}",
        "!src/**/*.d.ts"
    ]
}